<?xml version='1.0' encoding='utf-8'?>
<widget id="com.radiantmediaplayer.rmp-android-tv" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>rmp-android-tv</name>
    <description>
A sample Apache Cordova application for Android TV using Radiant Media Player
    </description>
    <author email="support@radiantmediaplayer.com" href="https://www.radiantmediaplayer.com/">
Radiant Media Player
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
