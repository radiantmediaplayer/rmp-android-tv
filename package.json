{
  "name": "rmp-android-tv",
  "version": "1.0.0",
  "author": "Radiant Media Player <support@radiantmediaplayer.com>",
  "description": "A sample Apache Cordova application for Android TV using Radiant Media Player",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radiantmediaplayer/rmp-android-tv.git"
  },
  "scripts": {
    "prepare": "browserify www/js/index.js -o www/js/prod.js -t [ babelify ] -v && cordova prepare android"
  },
  "main": "www/index.html",
  "keywords": [
    "ecosystem:cordova",
    "cordova-android",
    "cordova-plugin",
    "cordova",
    "android",
    "android-tv",
    "html5",
    "video"
  ],
  "bugs": {
    "url": "https://github.com/radiantmediaplayer/rmp-android-tv/issues"
  },
  "homepage": "https://www.radiantmediaplayer.com/docs/latest/android-tv.html",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime-corejs3": "^7.11.2",
    "babelify": "^10.0.0",
    "cordova-android": "^9.0.0",
    "cordova-plugin-rmpandroidtv": "git+https://github.com/radiantmediaplayer/cordova-plugin-rmpandroidtv.git",
    "cordova-plugin-whitelist": "^1.3.4",
    "core-js": "^3.6.5"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-rmpandroidtv": {}
    },
    "platforms": [
      "android"
    ]
  }
}